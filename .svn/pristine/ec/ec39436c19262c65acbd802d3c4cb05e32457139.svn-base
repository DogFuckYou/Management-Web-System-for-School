* {
	margin: 0px;
	padding: 0px;
}
body {
	background-color: white;
}

.header {
	width: 50%;
	height: 140px;
	margin: 15px auto;
	text-align: center;
}
.header .layui-form-item-left {
	float: left;
	clear: none;
}
.header .layui-form-item-right {
	float: right;
	clear: none;
}
.header .layui-form-item .layui-input-inline {
	float: left;
	margin-right: 0px;
}
.content {
	padding: 0px 20px;
}